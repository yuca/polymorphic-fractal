{
    "name": "yucadoo/polymorphic-fractal",
    "type": "library",
    "description": "Polymorphic Transformer implementation for PHP League's Fractal package.",
    "keywords": [
        "yuca",
        "fractal",
        "polymorphic",
        "api",
        "transform"
    ],
    "homepage": "https://github.com/yucadoo/polymorphic-fractal",
    "license": "MIT",
    "authors": [
        {
            "name": "Hrvoje Jukic",
            "email": "hrcajuka@gmail.com",
            "homepage": "https://github.com/yucadoo",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "league/fractal": "^0.19.2",
        "mouf/alias-container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "YucaDoo\\PolymorphicFractal\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YucaDoo\\PolymorphicFractal\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "suggest": {
        "yucadoo/singleton-container": "Allows caching and reuse of transformers."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "thanks": {
            "name": "thecodingmachine/alias-container",
            "url": "https://github.com/thecodingmachine/alias-container"
        }
    },
    "config": {
        "sort-packages": true
    }
}
